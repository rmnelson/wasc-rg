<h1>Listing grades</h1>

<table>
  <thead>
    <tr>
      <th>Corse work</th>
      <th>Student</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= CourseWork.find(grade.course_work_id).name %></td>
        <td><%= Student.find(grade.student_id).full_name %></td>
        <td><%= grade.value %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade', new_course_grade_path %>
<%= link_to 'Load Grades from Learn', course_load_grades_path %>
